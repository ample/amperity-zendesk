    {{!-- Search Container (Hooked Up to Results Page with Swifttype) --}}
    <div class="search-container">
      {{search instant=true class='search search-full'}}</div>
    
    <span id="search_placeholder_template"
      data-value="{{#is settings.search_placeholder_text_dc 'NONE'}}{{settings.search_placeholder_text}}{{else}}{{dc settings.search_placeholder_text_dc}}{{/is}}"
      style="display:none"></span>

       <li class="blocks-item submit-card custom hide-on-desktop">    
        {{#link 'new_request' class='blocks-item-link'}}Submit request{{/link}}
      </li>
   
  </div>
</section>

{{!-- Homepage Cards --}}
<section class="knowledge-base categories blocks">
  <section class="container">
    <ul class="blocks-list">
      {{!-- Amperity Docs Card --}}
      <li class="blocks-item bg-help-center custom">
        <a target="_blank" href='https://docs.amperity.com/' class="blocks-item-link"
          title="Amperity Docs">
        </a>
      </li>
      
      {{!-- Amperity Learning Lab Card --}}
      <li class="blocks-item bg-learning-lab custom">
        <a target="_blank" href='https://learn.amperity.com/' class="blocks-item-link"
          title="Amperity Learning Lab">
        </a>
      </li>

      {{!-- Guide to Amperity Support --}}
      <li class="blocks-item bg-support-guide custom">
        <a target="_blank" href='#' class="blocks-item-link"
          title="Guide to Amperity Support">
        </a>
      </li>

      {{!-- Best Practices --}}
      <li class="blocks-item bg-best-practices custom">
        <a target="_blank" href='#' class="blocks-item-link"
          title="Best Practices">
        </a>
      </li>
  </section>
</section>

{{!-- Featured (or 'promoted') Articles --}}
<section class="container custom-block-wrapper section">
  {{#if settings.home_article_visibility}}
  {{#if promoted_articles}}
  <section class="articles">
    <h3> 
      Featured Articles
    </h3>

    {{!-- loops through promoted articles list --}}
    <ul class="article-list promoted-articles">
      {{#each promoted_articles}}
      <li class="promoted-articles-item">
        <a href="{{url}}" title=" {{title}} ">
          {{title}}
        </a>
      </li>
      {{/each}}
    </ul>
  </section>
  {{/if}}
  {{/if}}
</section>