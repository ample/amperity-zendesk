<header class="header-wrapper">
  <div class="header">
    {{!-- Amperity Logo --}}
    <div class="logo">
      <a href='{{settings.logo_link}}'>
      </a>
    </div>

    <div class="nav-wrapper">

      {{!-- Mobile Menu Toggle --}}
      <button class="menu-button" aria-controls="user-nav" aria-expanded="false" aria-label="{{t 'toggle_navigation'}}">
        {{!-- Open Mobile Menu Icon --}}
        <svg class="open-mobile-menu" xmlns="http://www.w3.org/2000/svg" width="40" height="40" focusable="false" viewBox="0 0 16 16"
          class="icon-menu">
          <path fill="#D9D9D9" stroke="currentColor" stroke-linecap="round" d="M1.5 3.5h13m-13 4h13m-13 4h13" />
        </svg>
        {{!-- Close Mobile Menu Icon --}}
        <svg class="close-mobile-menu" xmlns="http://www.w3.org/2000/svg" width="40" height="30" viewBox="0 0 384 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M376.6 84.5c11.3-13.6 9.5-33.8-4.1-45.1s-33.8-9.5-45.1 4.1L192 206 56.6 43.5C45.3 29.9 25.1 28.1 11.5 39.4S-3.9 70.9 7.4 84.5L150.3 256 7.4 427.5c-11.3 13.6-9.5 33.8 4.1 45.1s33.8 9.5 45.1-4.1L192 306 327.4 468.5c11.3 13.6 31.5 15.4 45.1 4.1s15.4-31.5 4.1-45.1L233.7 256 376.6 84.5z"/></svg>
      </button>
        
      {{!-- User Navigation --}}
      <nav class="user-nav" id="user-nav">

        {{!-- Hard Coded URLs --}}
        <a class="hide-on-mobile" target="_blank" href="https://app.amperity.com" title="Platform">Platform</a>
        <a class="hide-on-mobile" target="_blank" href="https://amperity.com/blog" title="Blog">Blog</a>

        {{!-- showAmperityStatus() controls status color found in script.js --}}
        <a class="hide-on-mobile" target="_blank" href="https://status.amperity.com/" title="System Status"><span class="status-button"><div id="status-indicator"></div>System Status</span></a>

        {{!-- Load Canny Script: needs `data-canny-changelog` --}}
        <a class="hide-on-mobile" title="Canny Widget Toggle" data-canny-changelog>
            <svg fill="white" xmlns="http://www.w3.org/2000/svg" height="25px" width="25px" viewBox="0 0 512 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M32 448c0 17.7 14.3 32 32 32h160V320H32v128zm256 32h160c17.7 0 32-14.3 32-32V320H288v160zm192-320h-42.1c6.2-12.1 10.1-25.5 10.1-40 0-48.5-39.5-88-88-88-41.6 0-68.5 21.3-103 68.3-34.5-47-61.4-68.3-103-68.3-48.5 0-88 39.5-88 88 0 14.5 3.8 27.9 10.1 40H32c-17.7 0-32 14.3-32 32v80c0 8.8 7.2 16 16 16h480c8.8 0 16-7.2 16-16v-80c0-17.7-14.3-32-32-32zm-326.1 0c-22.1 0-40-17.9-40-40s17.9-40 40-40c19.9 0 34.6 3.3 86.1 80h-86.1zm206.1 0h-86.1c51.4-76.5 65.7-80 86.1-80 22.1 0 40 17.9 40 40s-17.9 40-40 40z"/></svg>
        </a>

         {{#if signed_in}}
         {{link 'requests' title="View Requests" class="hide-on-mobile"}}
         {{/if}} 

        {{!-- Login/Logout Logic --}}
        {{!-- Preview mode does not allow showing of the signed_in link - https://developer.zendesk.com/api-reference/help_center/help-center-templates/helpers/?_gl=1*1n7517m*_ga*MTUyODcwNDA4MS4xNzIxMDcyMjQw*_ga_0G6FC9CS2V*MTcyMTEwMjkyOC42LjEuMTcyMTEwNTg5OC4zNC4wLjA.&_ga=2.254266504.1820142515.1721072240-1528704081.1721072240#sign_out-link --}}
        {{#if signed_in}}
        {{#link "sign_out"}}
          Logout
        {{/link}}
        {{else}}
        {{#is settings.sign_in_button_visibility true}}
        {{#link "sign_in"}}
          Login
        {{/link}}
        {{/is}}
        {{/if}}

        {{!-- Submit a Request Button --}}
        {{#is settings.submit_req_text_dc 'NONE'}}
        {{#is settings.submit_req_text 'NONE'}}
        {{#link 'new_request' class='submit-a-request'}}Submit<span class="hide-on-desktop"> a</span> request{{/link}}
        {{else}}
        {{#link 'new_request' class='submit-a-request'}}Submit<span class="hide-on-desktop"> a</span> request{{/link}}
        {{/is}}
        {{else}}
        {{#isnt settings.submit_req_text_dc 'NONE'}}
        {{/isnt}}
        {{/is}}
      </nav>
    </div>
  </div>
</header>